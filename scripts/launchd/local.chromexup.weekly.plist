<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>local.chromexup.weekly</string>
        <key>ProgramArguments</key>
        <array>
            <string>/usr/local/bin/chromexup</string>
        </array>
        <key>StartCalendarInterval</key>
        <dict>
            <!-- Run weekly on Mondays at 12:00 -->
            <key>Weekday</key>
            <integer>1</integer>
            <key>Hour</key>
            <integer>12</integer>
            <key>Minute</key>
            <integer>0</integer>
        </dict>
    </dict>
</plist>
